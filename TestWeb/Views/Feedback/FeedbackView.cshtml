
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="keywords" content="Japan language, japan, nihongo, nippongo, японский язык, японский, язык, курсы японского языка" />
    <meta name="description" content="Курсы Японского языка" />
    <link href="~/css/ResetStyle.css" rel="stylesheet" type="text/css" />
    <link href="~/css/Feedback Page Style/FeedbackPageStyle.css" rel="stylesheet" type="text/css" />
    <title> Курсы Японского языка </title>
</head>
<body>
    <div class="backButton">
        <a href="#" class="BB" tabindex="0">UP</a>
    </div>
    <div class="wrap">

        <div class="row row-1">
            <div class="col col-1">
                @if (ViewBag.User != null)
                {<a href="../Home/HomeViewWithUser?userId=@ViewBag.User.Id">Главная</a>}
                @if (ViewBag.User == null)
                {<a href="../Home/Index">Главная</a>}
            </div>
            <div class="col col-2">
                @if (ViewBag.User != null)
                {<a href="../News/NewsView?userId=@ViewBag.User.Id">Новости</a>}
                @if (ViewBag.User == null)
                {<a href="../News/NewsView">Новости</a>}
            </div>
            <div class="col col-3">
                @if (ViewBag.User != null)
                {<a href="../Course/CoursesView?userId=@ViewBag.User.Id">Курсы</a>}
                @if (ViewBag.User == null)
                {<a href="../Course/CoursesView">Курсы</a>}
            </div>
            <div class="col col-4"><a href="">Обратная связь</a></div>
            <div class="col col-5">
                @if (ViewBag.User != null)
                {<a href="../Article/ArticlesView?userId=@ViewBag.User.Id">Статьи</a>}
                @if (ViewBag.User == null)
                {<a href="../Article/ArticlesView">Статьи</a>}
            </div>
            @if (ViewBag.User != null)
            {
                <div class="col col-6"><a href="../Home/HomeViewWithUser?userId=@ViewBag.User.Id">Добро пожаловать: @ViewBag.User.Login</a></div>
            }
        </div>

        <div class="row row-2">
            <div class="col col-1"><img src="~/images/Feedback Page Images/EKZAMEN-3_1.jpg" alt=""></div>
            <div class="col col-2">
                <p class="title">Здравствуй!</p>
                <p class="description">напиши нам</p>
            </div>
        </div>

        <form class="form-1" method="post" asp-action="SendMessage" asp-controller="Feedback">
            <div class="row row-3">
                <p class="title">Обратная связь</p>
                <div class="block block-email">
                    <p>Ваша почта</p>
                    @if (ViewBag.User != null)
                    {
                        <input type="text" value="@ViewBag.User.Email" name="email">
                        <input type="hidden" value="@ViewBag.User.Login" name="login" />
                        <input type="hidden" value="@ViewBag.User.Id" name="_userId" />
                    }
                    else
                    {
                        <input type="text" value="" name="email">
                        <input type="hidden" value="Anonim" name="login" />
                        <input type="hidden" value="0" name="_userId" />
                    }
                </div>
            </div>
            
            <div class="row row-4">
                <textarea name="text" id=""></textarea>
            </div>

            <div class="row row-5">
                    <input type="submit" value="Отправить" />
                    <p class="message">@ViewBag.Message</p>
            </div>

        </form>

        <div class="row row-6">
            <div class="col col-1">
                <img src="~/images/Feedback Page Images/Home Page Image.jpg" alt="error">
            </div>
            <div class="col col-2">
                <a href="">Обратная связь</a>
                <p>E-mail: vinnik_21@bk.ru</p>
                <p class="p-1">Все права защищены (с)</p>
            </div>
        </div>
    </div>
</body>
</html>