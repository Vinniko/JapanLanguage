
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="keywords" content="Japan language, japan, nihongo, nippongo, японский язык, японский, язык, курсы японского языка" />
    <meta name="description" content="Курсы Японского языка" />
    <link href="~/css/ResetStyle.css" rel="stylesheet" type="text/css" />
    <link href="~/css/Lesson Page Style/LessonPageStyle.css" rel="stylesheet" type="text/css" />
    <title> Курсы Японского языка </title>
</head>
<body>
    <div class="backButton">
        <a href="#" class="BB" tabindex="0">UP</a>
    </div>
    <div class="wrap">

        <div class="row row-1">
            <div class="col col-1"><a href="../Home/HomeViewWithUser?userId=@ViewBag.User.Id">Главная</a></div>
            <div class="col col-2"><a href="../News/NewsView?userId=@ViewBag.User.Id">Новости</a></div>
            <div class="col col-3"><a href="../Course/CoursesView?userId=@ViewBag.User.Id">Курсы</a></div>
            <div class="col col-4"><a href="../Feedback/FeedbackView?userId=@ViewBag.User.Id">Обратная связь</a>
            </div>
            <div class="col col-5"><a href="../Article/ArticlesView?userId=@ViewBag.User.Id">Статьи</a></div>
            <div class="col col-6"><a href="../Home/HomeViewWithUser?userId=@ViewBag.User.Id">Добро пожаловать: @ViewBag.User.Login</a></div>
        </div>

        <div class="row row-2">
            <div class="col col-1"><img src="~/images/Lesson Page Images/abdcbdded709262c710cb37c60a8acb3.jpg" alt=""></div>
            <div class="col col-2">
                <p class="title">Урок!</p>
                <p class="description">присутпаем к занятиям</p>
            </div>
        </div>

        <div class="row row-3">
            <p class="title">@ViewBag.Lesson.Title</p>
            <p class="hour">Часов: @ViewBag.Lesson.Hourses</p>
        </div>


        <div class="row row-4">
                @for (var i = 0; i < ViewBag.Lesson.Description.Split('•').Length; i++)
                {
                    if (i == 0)
                    {
                    <p>@ViewBag.Lesson.Description.Split('•')[i]</p>
                    }
                    else
                    {
                    <p>
                        @string.Concat("• ", ViewBag.Lesson.Description.Split('•')[i])
                    </p>
                    }
                }
        </div>

        <div class="row row-5"></div>
        <div class="row row-6">
            <p class="text">@ViewBag.Lesson.Text</p>
        </div>
        <div class="row row-7">
            <div class="col col-1">
                <img src="~/images/Lesson Page Images/Home Page Image.jpg" alt="error">
            </div>
            <div class="col col-2"><a href="../Feedback/FeedbackView?userId=@ViewBag.User.Id">Обратная связь</a>
                <p>E-mail: vinnik_21@bk.ru</p>
                <p class="p-1">Все права защищены (с)</p>
            </div>
        </div>
    </div>
</body>
</html>
